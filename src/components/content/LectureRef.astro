---
interface Props {
  sectionNumber: number
  lectureNumber: number
  udemyLectureId?: number
}

const { sectionNumber, lectureNumber, udemyLectureId } = Astro.props
const udemyUrl = udemyLectureId
  ? `https://www.udemy.com/course/langchain/learn/lecture/${udemyLectureId}`
  : undefined
---

<div class="mb-6 flex items-center gap-3">
  <span class="inline-flex items-center rounded-md bg-accent/10 px-3 py-1 text-xs font-medium text-accent">
    Udemy セクション{sectionNumber} レクチャー{lectureNumber}
  </span>
  {udemyUrl && (
    <a
      href={udemyUrl}
      target="_blank"
      rel="noopener noreferrer"
      class="inline-flex items-center gap-1 text-xs text-muted hover:text-link"
    >
      <svg class="h-3 w-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
        ></path>
      </svg>
      Udemyで見る
    </a>
  )}
</div>
