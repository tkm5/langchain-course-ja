---
interface Props {
  type?: 'info' | 'warning' | 'tip' | 'danger'
  title?: string
}

const { type = 'info', title } = Astro.props

const styles = {
  info: {
    border: 'border-info',
    bg: 'bg-info/5',
    icon: 'text-info',
    defaultTitle: '情報',
  },
  warning: {
    border: 'border-warning',
    bg: 'bg-warning/5',
    icon: 'text-warning',
    defaultTitle: '注意',
  },
  tip: {
    border: 'border-success',
    bg: 'bg-success/5',
    icon: 'text-success',
    defaultTitle: 'ヒント',
  },
  danger: {
    border: 'border-danger',
    bg: 'bg-danger/5',
    icon: 'text-danger',
    defaultTitle: '重要',
  },
}

const style = styles[type]
const displayTitle = title || style.defaultTitle
---

<div class:list={['my-6 rounded-lg border-l-4 p-4', style.border, style.bg]}>
  <div class="flex items-center gap-2 mb-2">
    {type === 'info' && (
      <svg class:list={['h-5 w-5', style.icon]} fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
      </svg>
    )}
    {type === 'warning' && (
      <svg class:list={['h-5 w-5', style.icon]} fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
      </svg>
    )}
    {type === 'tip' && (
      <svg class:list={['h-5 w-5', style.icon]} fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
      </svg>
    )}
    {type === 'danger' && (
      <svg class:list={['h-5 w-5', style.icon]} fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
      </svg>
    )}
    <span class="font-semibold text-sm">{displayTitle}</span>
  </div>
  <div class="text-sm leading-relaxed">
    <slot />
  </div>
</div>
